schema do
  input do
    array :cells do
      element :integer, :value
    end
  end

  # SHIFT â€” all policies, both directions
  value :shift_right_zero,   shift(input.cells.value,  1)                      # default :zero
  value :shift_left_zero,    shift(input.cells.value, -1)
  value :shift_right_clamp,  shift(input.cells.value,  1, policy: :clamp)
  value :shift_left_clamp,   shift(input.cells.value, -1, policy: :clamp)
  value :shift_right_wrap,   shift(input.cells.value,  1, policy: :wrap)
  value :shift_left_wrap,    shift(input.cells.value, -1, policy: :wrap)
end
